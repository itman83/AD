<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg" >

    <RelativeLayout
        android:id="@+id/topheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/searchsectionbg"
        android:gravity="center_vertical|center_horizontal" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />
    </RelativeLayout>

<TableLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:layout_below="@+id/topheader"
    android:gravity="center_vertical">
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="20dp"
   android:layout_marginLeft="30dp"
   android:layout_marginRight="5dp"
       >
        
          <ImageView
                    android:id="@+id/addressicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                 android:layout_marginRight="20dp"
                  />

                <TextView
                    android:id="@+id/txtaddress2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
               
                   android:layout_gravity="center"
                    android:textColor="@color/white" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="20dp"
   android:layout_marginLeft="30dp"
   android:layout_marginRight="5dp"
       >
        
          <ImageView
                    android:id="@+id/addressicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                 android:layout_marginRight="20dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/txtaddress2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
            
                   android:layout_gravity="center"
                    android:textColor="@color/white" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="30dp"
                 android:layout_marginTop="20dp"
         
   android:layout_marginRight="5dp" >
                 <ImageView
                    android:id="@+id/teleicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/phoneicon" />

                <TextView
                    android:id="@+id/txtphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                         android:layout_gravity="center"
                    android:textColor="@color/linkcolor" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="30dp"
                 android:layout_marginTop="20dp"
         
   android:layout_marginRight="5dp" >
                 <ImageView
                    android:id="@+id/faxicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginRight="20dp"
                    android:src="@drawable/faxicon" />

                <TextView
                    android:id="@+id/txtfax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:layout_gravity="center"
                    android:textColor="@color/white" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="30dp"
                 android:layout_marginTop="20dp"
         
   android:layout_marginRight="5dp" >
                  <ImageView
                    android:id="@+id/mailicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginRight="20dp"
                    android:src="@drawable/mailicon" />

                <TextView
                    android:id="@+id/txtmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                       android:layout_gravity="center"
                    android:textColor="@color/linkcolor" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="30dp"
                 android:layout_marginTop="20dp"
         
   android:layout_marginRight="5dp" >
                 <ImageView
                    android:id="@+id/webicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/webicon" />

                <TextView
                    android:id="@+id/txtweb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_gravity="center"
                    android:textColor="@color/linkcolor" />
    </TableRow>
 <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="30dp"
                 android:layout_marginTop="20dp"
         
   android:layout_marginRight="5dp" >
                 <ImageView
                    android:id="@+id/search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/search_icon" />

                <ImageView
                    android:id="@+id/weibo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                android:layout_marginRight="20dp"
                    android:src="@drawable/sinaweieboicon" />

                <ImageView
                    android:id="@+id/tencent"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                   android:layout_marginRight="20dp"
                    android:src="@drawable/tencenticon" />
    </TableRow>
    
</TableLayout>
</RelativeLayout>